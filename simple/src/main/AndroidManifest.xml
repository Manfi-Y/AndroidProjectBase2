<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="cn.manfi.android.project.simple">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <activity
            android:name="cn.manfi.android.project.simple.ui.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="cn.manfi.android.project.simple.ui.DataBindSimpleActivity"
            android:theme="@style/AppTheme.SwipeBack.NoActionBar"/>
        <activity
            android:name="cn.manfi.android.project.simple.ui.RxJavaSimpleActivity"
            android:theme="@style/AppTheme.SwipeBack.NoActionBar"/>
        <activity
            android:name="cn.manfi.android.project.simple.ui.RetrofitSimpleActivity"
            android:theme="@style/AppTheme.SwipeBack.NoActionBar"/>
        <activity
            android:name="cn.manfi.android.project.simple.ui.MVVMSimpleActivity"
            android:theme="@style/AppTheme.SwipeBack.NoActionBar"/>
        <activity
            android:name=".ui.NewsListSimpleActivity"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".ui.CheckPermissionSimpleActivity"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".ui.ViewPagerSimpleActivity"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".ui.DragLayoutSimpleActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".ui.TestActivity"/>
    </application>

</manifest>