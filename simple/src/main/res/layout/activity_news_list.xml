<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="me.tatarka.bindingcollectionadapter2.LayoutManagers"/>

        <variable
            name="viewModel"
            type="cn.manfi.android.project.simple.ui.NewsListViewModel"/>
    </data>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:refreshing="@{viewModel.isRefreshing}"
        app:onRefreshCommand="@{viewModel.onRefreshCmd}">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:itemBinding="@{viewModel.loadMoreItemBindingList}"
            app:items="@{viewModel.loadMoreItemList}"
            app:layoutManager="@{LayoutManagers.linear()}"
            app:onLoadMoreCommand="@{viewModel.onLoadMoreCmd}"/>
    </android.support.v4.widget.SwipeRefreshLayout>
</layout>